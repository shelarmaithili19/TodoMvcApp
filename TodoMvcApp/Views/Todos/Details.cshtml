@model TodoMvcApp.Models.Todo

@{
    ViewData["Title"] = "Todo Details";
}

<h2>Todo Details</h2>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.Title</h5>
        <p class="card-text"><strong>Completed:</strong> @(Model.IsCompleted ? "Yes" : "No")</p>
        <p class="card-text"><strong>Created At:</strong> @Model.CreatedAt.ToString("f")</p>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
